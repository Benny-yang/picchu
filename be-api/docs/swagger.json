        "/posts/wall": {
            "get": {
                "description": "Get posts for trending or following wall with random seed cursor pagination",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "posts"
                ],
                "summary": "Get Works Wall Posts",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Filter type: trending (default) or following",
                        "name": "type",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Random seed for repeatable paging. If not provided, a new one is generated.",
                        "name": "seed",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "Pagination cursor (base64 encoded offset)",
                        "name": "cursor",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "Limit per page (default 20)",
                        "name": "limit",
                        "in": "query"
